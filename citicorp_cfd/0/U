FoamFile
{
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (44.7 0 0);

boundaryField
{
    inlet
    {
        type            atmBoundaryLayerInletVelocity;
        z0              uniform 0.1;
        flowDir         (1 0 0);
        zDir            (0 0 1);
        kappa           0.41;
        Cmu             0.09;
        Uref            44.7;
        Zref            10;
        zGround         uniform 0;
        value           uniform (44.7 0 0);
    }
    outlet
    {
        type            inletOutlet;
        inletValue      uniform (0 0 0);
        value           uniform (44.7 0 0);
    }
    ground
    {
        type            noSlip;
    }
    top
    {
        type            slip;
    }
    sides
    {
        type            symmetry;
    }
    citicorp_tower
    {
        type            noSlip;
    }
    citicorp_stilts
    {
        type            noSlip;
    }
    surroundings
    {
        type            noSlip;
    }
}


